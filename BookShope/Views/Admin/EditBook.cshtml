@{
}
<form asp-action="EditBook" asp-controller="Admin" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Book_Id" type="hidden" />
    <div>
        <label asp-for="Book_Name">Book Name</label>
        <input asp-for="Book_Name" value="@Model.Book_Name" />
    </div>

    <div>
        <label asp-for="Writer">Book Writer</label>
        <input asp-for="Writer" value="@Model.Writer" />
    </div>


    <div>
        <label asp-for="price">Book price</label>
        <input asp-for="price" value="@Model.price" />
    </div>


    <button type="submit">Edit</button>
</form>
